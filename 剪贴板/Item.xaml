                        </Grid>
                    </Border>
                    <Border Padding="0,13,3,3"
                            >
                        <Grid>
                            <TextBlock x:Name="tbText" 
                                       TextWrapping="Wrap" 
                                       Text="11111111">
                            </TextBlock>
                            <Image HorizontalAlignment="Left" 
                                   x:Name="img"
                                   Width="1000"
                                   Height="80">
                            </Image>
                        </Grid>
                    </Border>

                </DockPanel>
                <Button  x:Name="closeBtn" 
                         Grid.Row="0" 
                         Style="{DynamicResource CloseButtonStyle}" 
                         Width="13" 
                         Height="13" 
                         HorizontalAlignment="Right" 
                         Opacity="1" 
                         VerticalAlignment="Top" 
                         Margin="1 0 3 1" 
                         Background="Transparent" 
                         Click="closeBtn_Click"/>
                <Button x:Name="topBtn" 
                        Grid.Row="0" 
                        Style="{DynamicResource TopButtonStyle}" 
                        Width="13" 
                        Height="13" 
                        HorizontalAlignment="Right" 
                        Opacity="1"
                        VerticalAlignment="Top" 
                        Margin="1,0,20,1" 
                        Background="Transparent" 
                        Click="topBtn_Click"/>

                <Popup Name="popup"  
                       Placement="Mouse"
                       StaysOpen="True"                        
                       PopupAnimation="Fade">
                    <Border BorderBrush="#E00BC4"  
                            BorderThickness="2"                             
                            Background="White">
                        <Image x:Name="maxImg"                                
                               Width="auto" 
                               Height="auto"
                               MaxWidth="1000"
                               MaxHeight="600"/>
                    </Border>
                </Popup>
            </Grid>
           
        </Border>

       
    </Grid>
</UserControl>
